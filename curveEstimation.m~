x = localPath(:,1);
y = localPath(:,2);
DoP = 5;
X = zeros(length(x),DoP);
X(:,1) = X(:,1)+1;
for i = 2:DoP
    X(:,i) = x.^(i-1);
end
C = (X'*X)\X'*y;

yDot = X(:,1:end-1)*((1:length(C)-1)'.*C(2:end));
yDDot = X(:,1:end-2)*((1:length(C)-2)'.*(2:length(C)-1)'.*C(3:end));

curveRadius = ((1+yDot.^2).^(3/2))./(abs(yDDot));